# =============================================================================
# TAPMAD ANTI-PIRACY SYSTEM - ENVIRONMENT CONFIGURATION
# =============================================================================
# 
# CRITICAL SECURITY NOTICE:
# - NEVER commit .env files to version control
# - Use strong, unique passwords for production
# - Rotate API keys regularly
# - Use secrets management in production
#
# =============================================================================

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
ENV=development  # Options: development, staging, production

# =============================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# =============================================================================
DATABASE_URL=postgresql+psycopg2://postgres:postgres@localhost:5432/antipiracy
PGHOST=localhost
PGPORT=5432
PGDATABASE=antipiracy
PGUSER=postgres
PGPASSWORD=postgres

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# S3/MINIO CONFIGURATION
# =============================================================================
S3_ENDPOINT_URL=http://localhost:9000
S3_BUCKET=antipiracy
S3_ACCESS_KEY=tapmad
S3_SECRET_KEY=tapmadsecret
S3_REGION=us-east-1
S3_PUBLIC_ENDPOINT=http://localhost:9000

# =============================================================================
# SMTP CONFIGURATION
# =============================================================================
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=dmca@example.com
SMTP_PASS=your_smtp_password
FROM_EMAIL=dmca@example.com

# =============================================================================
# API SECURITY CONFIGURATION
# =============================================================================
API_KEY=devtoken123

# CORS Configuration - RESTRICT in production
CORS_ORIGINS=*
CORS_CREDENTIALS=true

# Request limits
MAX_REQUEST_SIZE=104857600  # 100MB in bytes
SESSION_TIMEOUT=3600  # 1 hour in seconds

# =============================================================================
# LLM CONFIGURATION
# =============================================================================
LLM_BASE_URL=http://localhost:8089
LLM_MODEL=gemma-2-2b-it-q4_k_m
LOCAL_AI_MODEL=gemma-2-2b-it-q4_k_m
LOCAL_AI_ENDPOINT=http://localhost:8089
LOCAL_AI_PROVIDER=ollama

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_PER_MIN=1000

# =============================================================================
# CONTENT MATCHING THRESHOLDS
# =============================================================================
VIDEO_THRESHOLD=0.18
AUDIO_THRESHOLD=0.72
VIDEO_HAMMING_REVIEW_THRESHOLD=12
VIDEO_HAMMING_APPROVE_THRESHOLD=8
LLM_MIN_SCORE=0.3

# =============================================================================
# SCANNING CONFIGURATION
# =============================================================================
CRAWL_MAX_PER_RUN=25
MAX_CANDIDATES_PER_SCAN=50
SCAN_TIMEOUT_SECONDS=600
ENABLE_AUTO_ENFORCEMENT=true
PROVIDER_ACTIONS_ENABLED=true

# =============================================================================
# ENFORCEMENT CONFIGURATION
# =============================================================================
ENFORCEMENT_DRY_RUN=true

# =============================================================================
# PLATFORM-SPECIFIC CONFIGURATION
# =============================================================================

# YouTube Configuration
YT_API_KEY=your_youtube_api_key_here
YOUTUBE_API_KEY=your_youtube_api_key_here

# Telegram Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Facebook Configuration
FACEBOOK_ACCESS_TOKEN=your_facebook_access_token_here

# Twitter Configuration
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# Instagram Configuration
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token_here

# =============================================================================
# LOGGING AND MONITORING
# =============================================================================
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # Options: json, text
ENABLE_STRUCTURED_LOGGING=true
ENABLE_METRICS=true

# =============================================================================
# SECURITY HEADERS
# =============================================================================
ENABLE_SECURITY_HEADERS=true
ENABLE_CSP=true
ENABLE_HSTS=true
ENABLE_XSS_PROTECTION=true

# =============================================================================
# BACKUP AND RECOVERY
# =============================================================================
ENABLE_AUTO_BACKUP=true
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
